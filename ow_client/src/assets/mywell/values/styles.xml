<resources>
    <!-- launcher screen, displayed before react-native-splash-screen -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/pre_launch_screen</item>
        <item name="android:statusBarColor">@color/primary_dark_app</item>
    </style>

    <!-- react-native-splash-screen -->
    <!-- I don't think this is actually used -->
    <style name="SplashScreenTheme" parent="SplashScreen_SplashTheme">
        <item name="colorPrimaryDark">@color/primary_dark_app</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/post_launch_screen</item>
        <item name="android:statusBarColor">@color/primary_dark_app</item>
    </style>

</resources>
